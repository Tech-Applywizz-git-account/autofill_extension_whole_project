{
    "manifest_version": 3,
    "name": "Job Application Autofill",
    "version": "1.0.0",
    "description": "Autofill job applications with deterministic canonical mapping",
    "permissions": [
        "storage",
        "activeTab",
        "unlimitedStorage",
        "webNavigation"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "all_frames": true,
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "settings.html",
        "default_icon": {
            "16": "assets/icon16.png",
            "48": "assets/icon48.png",
            "128": "assets/icon128.png"
        }
    },
    "options_page": "settings.html",
    "icons": {
        "16": "assets/icon16.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}